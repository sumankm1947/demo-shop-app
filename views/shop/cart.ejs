<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
    </head>
    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (products.length > 0) { %>
                <ul class="cart__item-list">
                    <% for (product of products) { %>
                            <li class="cart__item">
                                <!-- <%= product.title %> ( <%= product.cartItem.quantity %>  ) -->
                                <h1><%= product.title %></h1>
                                <h2>Quantity: <%= product.cartItem.quantity %></h2>
                                <form action="/cart/delete-product" method="POST">
                                    <input type="hidden" value="<%= product.id %>" name="productId">
                                    <button class="btn danger" type="submit">Delete</button>
                                </form>
                            </li>
                    <% } %>
                </ul>
                <form class="centered" action="/create-order" method="POST">
                    <button class="btn centered" type="submit">Order Now</button>
                </form>
            <% } else { %>
                <h1>No Products</h1>
            <% } %>
        </main>

        <%- include('../includes/end.ejs') %>