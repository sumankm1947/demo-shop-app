<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
    </head>
    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (products.length > 0) { %>
                <ul class="cart__item-list">
                    <% for (product of products) { %>
                            <li class="cart__item">
                                <h1><%= product.productId.title %></h1>
                                <h2>Quantity: <%= product.quantity %></h2>
                                <form action="/cart/delete-product" method="POST">
                                    <input type="hidden" value="<%= product.productId._id %>" name="productId">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="btn danger" type="submit">Delete</button>
                                </form>
                            </li>
                    <% } %>
                </ul>
                <br>
                <!-- <form class="centered" action="/create-order" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn centered order-btn" type="submit">Order Now</button>
                </form> -->
                <div class="centered">
                    <a href="/checkout" class="btn">Order Now!</a>
                </div>
            <% } else { %>
                <h1>No Products</h1>
            <% } %>
        </main>

        <%- include('../includes/end.ejs') %>